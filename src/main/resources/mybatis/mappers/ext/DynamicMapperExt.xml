<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.forum.repository.mapper.ext.DynamicMapperExt" >
    <resultMap id="BaseResultMap" type="com.forum.pojo.dto.CountDto" >
        <id column="times" property="createDynamicTime" jdbcType="TIMESTAMP" />
        <result column="counts" property="DynamicCount"/>
    </resultMap>

    <select id="count"  resultMap="BaseResultMap">
        select DATE_FORMAT(create_time,'%Y%m%d') as times ,count(*)  as counts
        from dynamic group by DATE_FORMAT(create_time,'%Y%m%d')
    </select>


    <select id="selectObjectListByWhere" resultMap="com.forum.repository.mapper.DynamicMapper.BaseResultMap">
        select <include refid="com.forum.repository.mapper.DynamicMapper.Base_Column_List"></include>
        from dynamic
        <where>
            <if test="selective != null">
                <if test="selective.pkDictionaryId != null">
                    and pk_dynamic_id = #{selective.pkDictionaryId,jdbcType=BIGINT}
                </if>
                <if test="selective.pkDictionaryId != null">
                    and dynamic_title like concat('%',#{selective.pkDynamicId,jdbcType="VARCHAR"},'%')
                </if>
                <if test="selective.isDel != null">
                    and is_Del = #{selective.isDel ,jdbcType=BIGINT}
                </if>
            </if>

        </where>
    </select>


</mapper>

